<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Day mode theme -->
    <style name="Base.Theme.ChatBot" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:background">@color/white</item> <!-- Set your light background color -->
        <item name="android:textColor">@color/black</item> <!-- Set your light text color -->
    </style>

    <!-- Night mode theme -->
    <style name="Base.Theme.ChatBot.Dark" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:background">@color/black</item> <!-- Set your dark background color -->
        <item name="android:textColor">@color/white</item> <!-- Set your dark text color -->
    </style>
</resources>
